<div class="customer-reviews">
    <h2>Customer Reviews</h2>
    <div class="rating">
      <div class="star-rating">
        {% assign rating = product.rating %}
        {% for i in (1..5) reversed %}
          <i class="fa fa-star {% if rating >= i %}filled{% endif %}"></i>
        {% endfor %}
      </div>
      <div class="rating-count">
        {{ rating }}
        <span class="total-reviews">{{ product.reviews_count }} reviews</span>
      </div>
    </div>
    <div class="review-distribution">
      {% assign reviews = product.reviews %}
      {% for i in (1..5) reversed %}
        <div class="review-bar">
          <span class="star-label">{{ i }} Star</span>
          <div class="bar">
            <div class="progress" style="width: {{ reviews | where: 'rating', i | size | times: 100 | divided_by: product.reviews_count }}%">
            </div>
          </div>
          <span class="count">{{ reviews | where: 'rating', i | size }}</span>
        </div>
      {% endfor %}
    </div>
  </div>
  
  <style>
  .customer-reviews {
    width: 70%;
    height: 40%;
    max-width: 800px;
    margin: 0 auto;
    font-family: Arial, sans-serif;
  }
  .customer-reviews h2 {
    text-align: center;
    margin-bottom: 20px;
  }
  .rating {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
  }
  .star-rating {
    display: flex;
  }
  .star-rating .fa {
    color: #ddd;
    margin-right: 5px;
  }
  .star-rating .fa.filled {
    color: #f39c12;
  }
  .rating-count {
    font-size: 16px;
  }
  .review-distribution {
    margin-bottom: 20px;
  }
  .review-bar {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
  }
  .star-label {
    width: 50px;
  }
  .bar {
    flex-grow: 1;
    height: 10px;
    background-color: #f1f1f1;
    margin: 0 10px;
    position: relative;
  }
  .progress {
    height: 100%;
    background-color: #f39c12;
  }
  .count {
    width: 30px;
    text-align: right;
  }
  </style>
  
  {% schema %}
  {
    "name": "review display",
    "target": "section",
    "settings": [
      { "type": "product", "id": "product", "label": "Product", "autofill": true },
      { "type": "color", "id": "colour", "label": "Star Colour", "default": "#ff0000" }
    ]
  }
  {% endschema %}
  